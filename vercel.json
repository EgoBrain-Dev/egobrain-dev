{
  "version": 2,
  "builds": [
    { "src": "frontend/pages/**/*.html", "use": "@vercel/static" },
    { "src": "backend/requirements.txt", "use": "@vercel/python" }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/backend/app.py"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/pages/index.html"
    }
  ]
}